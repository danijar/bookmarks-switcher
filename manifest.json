{
	"manifest_version": 2,
	"name": "Bookmarks Switcher",
	"version": "1.0.0",
	"short_name": "Bookmarks Switcher",
	"description": "Select which bookmarks folder to show as the bookmarks bar. This allows for multiple bookmark bars and helps you focus on one project at a time.",
	"author": "Danijar Hafner",
	"permissions": [
	 	"bookmarks",
    "storage"
	],
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"background": {
		"scripts": [
            "background/utility.js",
            "background/storage.js",
            "background/init.js",
            "background/sync.js"],
    "persistent": false
	},
  "browser_action": {
    "default_title": "Bookmarks Switcher",
    "default_popup": "popup.html",
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    }
  }
}
